{
  "compilerOptions": {    
    "outDir": "./dist/",
    "rootDir": "./src/",

    "moduleResolution": "node",
    "baseUrl": "./src/",
   
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,

    "noEmitOnError": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
